<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profit_calculate204"
    android:orientation="vertical"
    android:padding="15dp"
    >


    <TextView
        android:id="@+id/hisab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="হিসাব ক্যালকুলেটর"
        android:fontFamily="@font/bangla_font"
        android:textSize="30dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ক্রয় মূল্য কত?"
        android:fontFamily="@font/bangla_font"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/buyPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ক্রয় মূল্য লিখুন"
        android:background="@drawable/input_bg"
        android:padding="15dp"
        android:inputType="number"
        android:layout_marginBottom="5dp"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="বিক্রয় মূল্য কত?"
        android:fontFamily="@font/bangla_font"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/sellPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="বিক্রয় মূল্য লিখুন"
        android:background="@drawable/input_bg"
        android:padding="15dp"
        android:inputType="number"
        android:layout_marginBottom="5dp"

        />

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ফলাফল"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="@font/bangla_font"
        android:textSize="20dp"
        android:background="@drawable/input_bg"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

   <LinearLayout
       android:id="@+id/resultTv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/sign_google_bg"
       android:layout_marginTop="15dp"
       android:visibility="invisible"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="100"
           >

           <TextView
               android:layout_weight="45"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="লাভ হয়েছে"
               android:fontFamily="@font/bangla_font"
               android:textSize="20dp"
               android:textColor="#000"
               android:textStyle="bold"
               android:padding="10dp"
               />

           <TextView
               android:id="@+id/tvProfit"
               android:layout_weight="55"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:fontFamily="@font/bangla_font"
               android:textSize="20dp"
               android:textColor="#4CAF50"
               android:textStyle="bold"
               android:padding="10dp"
               />

       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#efefef"
           android:layout_marginHorizontal="10dp"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="100"

           >

           <TextView
               android:layout_weight="45"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="শতকরা লাভ হয়েছে"
               android:fontFamily="@font/bangla_font"
               android:textSize="20dp"
               android:textColor="#000"
               android:textStyle="bold"
               android:padding="10dp"
               />

           <TextView
               android:id="@+id/tvPerProfit"
               android:layout_weight="55"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:fontFamily="@font/bangla_font"
               android:textSize="20dp"
               android:textColor="#4CAF50"
               android:textStyle="bold"
               android:padding="10dp"
               />

       </LinearLayout>



   </LinearLayout>






</LinearLayout>